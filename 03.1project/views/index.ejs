<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>backend 01 project</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-700 text-white">
    <div class="main w-full min-h-screen bg-zinc-900">
      <form action="/create" method="post" class="form p-10">
        <input
          type="text"
          class="block w-full rounded-md outline-none px-5 mt-3 py-2 bg-zinc-700"
          placeholder="title"
          name="tittle"
        />
        <textarea
          name="text"
          id="text"
          class="block mt-3 w-full outline-none rounded-md resize-none px-2 py-2 bg-zinc-700"
          placeholder="discription"
        ></textarea>
        <input
          type="submit"
          value="create task"
          class="bg-green-700 p-3 m-2 rounded-md"
        />
        <div class="task flex gap-4 p-10">
          <% if (files.length > 0) { %>
            <% files.forEach(function(val) { %>
              <div class="task bg-zinc-700 p-10 w-72 px-3 py-4 rounded-md text-bg-zinc-700">
                <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                <a href="" class="text-blue-500 inline-block mt-4">read more</a>
              </div>
            <% }) %>
          <% } else { %>
            <h3>no task yet</h3>
          <% } %>
        </div>
      </form>
    </div>
  </body>
</html>
